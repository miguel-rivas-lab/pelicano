include jade/components

doctype html
html
	head
		+head_extended
		title Contact Us // DrLogic
	body
		aside.loader
		+color-nav

	section#contact
		section.intro
			.container
				h1 Get in touch for Mac support

				.row
					.col-md-6
						p There’s no such thing as a typical client, so we don’t offer a one-size-fits-all IT solution. Much of what we do has evolved around the needs of our clients and by getting to know how they like to work with us.
					.col-md-6
						p To find out how we can help you improve the way your business operates and to take the aches and pains out of IT support, please drop Dr Logic a line or pick up the phone.

			.animation-intro
				img.plane.p01(src="img/contact/plane1.png", width= "100")
				img.plane.p02(src="img/contact/plane2.png", width= "100")
				img.plane.p03(src="img/contact/plane3.png", width= "100")
				img.plane.p04(src="img/contact/plane4.png", width= "100")
				img.plane.p05(src="img/contact/plane5.png", width= "100")
				img.plane.p06(src="img/contact/plane6.png", width= "100")

		section.body#main
			.bend
				.container
					.row
						.col-md-6
							address
								p
									a.smooth(href="tel:02036426540").phone
										span 020 3642 6540
										img(src="img/contact/phone.png")

								p
									a.smooth(href="mailto:hello@drlogic.com?Subject=Contact%20From%20Webpage").mail
										img(src="img/contact/mail.png")
										span hello@drlogic.com

								p
									a.smooth(href="#location")
										img(src="img/contact/sign.png")
										strong London
										small Exmouth House, 3-11 Pine Street London EC1R 0JH

						.col-md-6
							form(data-toggle="validator", role= "form")
								legend Send us a message

								.form-group.has-feedback
									span.fa.fa-user.input-group-addon
									input(type="text", placeholder="Full name*", required="required", data-error="Fill this field").form-control
									.help-block.with-errors

								.form-group.has-feedback
									span.fa.fa-building.input-group-addon
									input(type="text", placeholder="Company Name*", required="required", data-error="Fill this field").form-control
									.help-block.with-errors

								.form-group.has-feedback
									span.fa.fa-envelope.input-group-addon
									input(type="email", placeholder="Email Address*", required="required", data-error="Fill this field").form-control
									.help-block.with-errors

								.form-group.has-feedback
									span.fa.fa-phone-square.input-group-addon
									input(type="tel", placeholder= "Phone Number", data-error="Fill this field").form-control
									.help-block.with-errors

								.form-group.txt-area.has-feedback
									span.fa.fa-pencil.input-group-addon
									textarea(placeholder= "Your Message*", required= "required", data-error="Fill this field").form-control
									.help-block.with-errors

								button(type="Submit").btn.btn-primary.orange Submit

		section#location
			h2 Where to find us
			section#map

		+footer
		+scripts_extended(true)